        {
          "name": "Login Partner",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const token = pm.response.json().token;",
                  "    pm.collectionVariables.set('partnerToken', token);",
                  "    console.log('Partner token saved:', token.substring(0, 20) + '...');",
                  "}"
