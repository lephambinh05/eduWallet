{
  "name": "eduwallet-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for EduWallet - NFT Learning Passport Platform",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:pioneZero": "npx hardhat run scripts/deploy.js --network pioneZero",
    "deploy:pioneChain": "npx hardhat run scripts/deploy.js --network pioneChain",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "verify:pioneZero": "npx hardhat verify --network pioneZero",
    "verify:pioneChain": "npx hardhat verify --network pioneChain",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean"
  },
  "keywords": [
    "blockchain",
    "nft",
    "education",
    "smart-contracts",
    "ethereum",
    "polygon"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "hardhat": "^2.25.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "dotenv": "^17.2.2"
  }
}
