# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/eduwallet
MONGODB_TEST_URI=mongodb://localhost:27017/eduwallet_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Blockchain Configuration
BLOCKCHAIN_NETWORK=pioneZero
BLOCKCHAIN_RPC_URL=https://rpc.zeroscan.org
BLOCKCHAIN_CHAIN_ID=5080

# Contract Addresses
EDU_TOKEN_ADDRESS=
LEARNPASS_NFT_ADDRESS=
CERTIFICATE_NFT_ADDRESS=
FACTORY_ADDRESS=
MARKETPLACE_ADDRESS=
EDUWALLET_DATASTORE_ADDRESS=
PZO_TOKEN_ADDRESS=
POINT_TOKEN_ADDRESS=

# Private Key for Blockchain Operations (Server Wallet)
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@eduwallet.com

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# API Documentation
API_DOCS_URL=/api-docs

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret

# Admin Configuration
ADMIN_EMAIL=admin@eduwallet.com
ADMIN_PASSWORD=admin123456

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR=false
ENABLE_MARKETPLACE=true
ENABLE_REWARDS=true

# External APIs
EXTERNAL_API_TIMEOUT=10000
EXTERNAL_API_RETRY_ATTEMPTS=3
